<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
 <style>
    .chatbox{
        outline:1px solid lightgray;
        margin-top:30px;
        min-height:160px;
        padding: 0.5em;
        border-radius:3px;
    }
 </style>
</head>
<body>
   <div class="container">
        <div class="row">
            <div class="col">
                <h1 class="mt-3">This is the home page</h1>
                <hr>
            </div>
        </div>
        <div class="row">
            <div class="col-md-8">
                <h3>Chat</h3>
                <div class="form-group">
                    <label form="username">Username:</label>
                    <input type="text" name="username"
                     id="username"
                     class="form-control"
                     autocomplete="off" />
                </div>
                 <div class="form-group">
                    <label form="message">Message:</label>
                    <input type="text" name="message"
                     id="message"
                     class="form-control"
                     autocomplete="off" />
                </div>
                <input type="hidden" name="action" id="action"/>
                 <div id="output" class="chatbox">
            </div>
            </div>
           
            <div class="col-md-4">
                <h3>Who's Online</h3>
                <ul id="online_users"> </ul>
            </div>
        </div>
   </div>
</body>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<script>
 let socket = null;

 window.onbeforeunload = function(){
 //to handle when a user leaves from the app page
    console.log("Leaving the app");
    let jsonData ={};
    jsonData["action"] ="left_app";
    socket.send(JSON.stringify(jsonData))
 }
    //event listener, waits to the DOM is loaded to connects to ws
    document.addEventListener("DOMContentLoaded", function () {
      //connect to the handler route for the ws
      socket = new WebSocket("ws://127.0.0.1:8080/ws");
      socket.onopen = () => {
        //check if the ws connection works
        console.log("Succesfully Connected");
      };

        socket.onclose =()=>{
        console.log("Connectin closed");
        }
        socket.onerror =error=>{
            console.log("there was an error");
        }
        //to handle the response from server endpoint
        socket.onmessage = msg=>{
        
            let data =JSON.parse(msg.data)
            console.log("Action is",data.action);

            switch (data.action){
                //the servers response is the list of all connected clients username
                case "list_users":
                    let ul = document.getElementById("online_users");
                    while (ul.firstChild) ul.removeChild(ul.firstChild);

                    if(data.connected_users.length > 0  ){
                        data.connected_users.forEach(function(item){
                            let li = document.createElement("li");
                            li.appendChild(document.createTextNode(item));
                            ul.appendChild(li)
                        })
                    }
                break;
            }
    }
       //adding event listener to form inputs
       let userInput = document.getElementById("username");
       //the user type their username and press key
       userInput.addEventListener("change",function(){
       //build some JSON with the input value and action type and send it to the ws
       let jsonData ={}
        jsonData["action"] ="username";
        jsonData["username"] = this.value;
        socket.send(JSON.stringify(jsonData))

       }); 
    });
</script>
</html>